    <body>

  
    <style>
        #main{
            background-color:#111;
        }
    </style>
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= doctor.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/viewdoctor/<%= doctor._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/viewdoctor">Go Back</a>
        </div>
</div>

</body>
