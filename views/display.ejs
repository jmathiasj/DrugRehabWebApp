<!DOCTYPE HTML>
<html>
    <head>
        <style>

div.des{
margin-top: 0px;
margin-bottom: 0px;
text-align: left;




}
div.well{
  margin-left:152px;
  margin-right:30px;
  margin-top: 20px;
}



      </style>
    <link rel="stylesheet" type="text/css" href="../css/show.css">
</head>
<body>


    <!--<div class="col-md-12">-->






<div class="ro" >
<table width="100%">
<tr>
<th><img class="img-responsive" style="border-style:solid" width="250" height="280" src="<%= doctor.image %>"></th>

  <th><div class="des">
                    <h4><a>Name: <%=doctor.name%></a></h4>
                    <p>Qualification: <%=doctor.Qualification%></p>
                    <p>Specialization : <%=doctor.Specilaization%></p>
                    <span class="skype-button rounded" data-contact-id="<%= doctor.Skypeid %>" data-text="Call Doctor"></span>
                     <script src="https://swc.cdn.skype.com/sdk/v1/sdk.min.js"></script>
                   </div>
                 </th></tr>
</table>

</div>




    <div class="well">
        <div class="text-right">
            <a class="btn btn-success" href="/viewDoctor/<%= doctor._id %>/comments/new"><button class="btn-btn-primary">Add New Comment</button></a>
        </div>
        <hr>
        <% doctor.comments.forEach(function(comment){ %>
            <div class="row">
                <div class="col-md-12">
                    <strong><%= comment.author.username %></strong>
                    <span class="pull-right"></span>
                    <div>
                        <%= comment.text %>
                           <%if(currentUser._id && comment.author.id.equals(currentUser._id)){%>
                                    <form style="display: inline" class="pull-right" action="/viewdoctor/<%=doctor._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                        <button class="btn btn-xs btn-danger">DELETE</button>
                                        <a href="/viewdoctor/<%=doctor._id%>/comments/<%=comment._id%>/edit" ><button class="btn btn-xs btn-danger">EDIT</a></button>
                                    </form>
                           <% } %>
                    </div>
                </div>
            </div>

        <% }) %>

    </div>


  </body>
</html>
